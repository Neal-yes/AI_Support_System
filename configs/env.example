# API
API_PORT=8000

# Postgres
POSTGRES_USER=ai_support
POSTGRES_PASSWORD=ai_support_pw
POSTGRES_DB=ai_support
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Ollama
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=qwen2.5:7b

# Client Defaults
# Ollama 连接保活，减少冷启动，可为时间字符串(如 5m)或秒数
OLLAMA_KEEP_ALIVE=5m
# 生成与向量接口超时（秒）
GENERATE_TIMEOUT=300
EMBED_TIMEOUT=120
# 默认检索条数与生成最大 token 数
DEFAULT_TOP_K=5
DEFAULT_NUM_PREDICT=256

# Concurrency Limits（并发上限，可按需调整）
# 下载并发上限（与 src/app/routers/collections.py 一致，默认 4）
DOWNLOAD_MAX_CONCURRENCY=4
# 后台导出并发上限（默认 2）
EXPORT_MAX_CONCURRENCY=2

# Logging（日志级别：DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO

# CORS（允许的来源，逗号分隔；* 表示全部允许）
CORS_ORIGINS=*
